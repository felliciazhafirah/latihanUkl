generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  Id            Int     @id @default(autoincrement())
  name          String 
  username      String   @unique
  password      String
  role          String
  createdAt     DateTime    @default(now())
  updateAt      DateTime    @default(now())
  kehadiran     Kehadiran[]
}

model Kehadiran {
  kehadiran_Id  Int       @id @default(autoincrement())  
  date               DateTime
  time               String
  status             String
  user_Id            Int 
  user      User     @relation(fields: [user_Id], references: [Id])

}